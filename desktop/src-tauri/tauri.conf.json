{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PLANIFY MANAGEMENT",
  "version": "0.1.0",
  "identifier": "com.planify.desktop",
  "build": {
    "frontendDist": "../static",
    "beforeDevCommand": "bash -lc \"cd .. && python3 run.py\"",
    "devUrl": "http://127.0.0.1:5000",
    "beforeBuildCommand": ""
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "PLANIFY MANAGEMENT",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
